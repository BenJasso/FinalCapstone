@model Matrix90.ViewModels.RecipeViewModel

@{
    ViewData["Title"] = "CreateRecipe";
    Layout = "~/Views/Shared/_NutritionistsLayout.cshtml";
}

<h1>CreateRecipe</h1>

<h4>Recipe</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form enctype="multipart/form-data" asp-action="CreateRecipe">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Type" class="control-label"></label>
                <input asp-for="Type" class="form-control" />
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RecipeInfo" class="control-label"></label>
                <textarea asp-for="RecipeInfo" class="form-control" rows="8"></textarea>
                <span asp-validation-for="RecipeInfo" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="RecipeImage" class="control-label"></label>
                <div class="col-sm-10">
                    <div class="custom-file">
                        <input asp-for="RecipeImage" class="form-control custom-file-input" />
                        <label class="custom-file-label">Choose File...</label>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>

            @section Scripts {
                <script>
                    $(document).ready(function () {
                        $('.custom-file-input').on("change", function () {
                            var fileName = $(this).val().split("\\").pop();
                            $(this).next('.custom-file-label').html(fileName);
                        })

                    });
                </script>

            }
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

