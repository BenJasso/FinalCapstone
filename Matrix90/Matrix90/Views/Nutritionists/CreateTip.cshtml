@model Matrix90.Models.TipOfWeek

@{
    ViewData["Title"] = "CreateTip";
    Layout = "~/Views/Shared/_NutritionistsLayout.cshtml";
}

<div><br /></div>
<div class="container" style="text-align:center; "><img src="~/Images/logo.png" /></div>
<div> <br /></div>

<div class="jumbotron">
    <h1 style="text-align:center">Create A New Tip</h1>

   
    <hr />
    <div class="row">
        <div class="col-md-4"><p></p></div>
        <div class="col-md-4">
            <form style="text-align:center" asp-action="CreateTip">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="SubjectName" class="control-label"></label>
                    <input asp-for="SubjectName" class="form-control" />
                    <span asp-validation-for="SubjectName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Tip" class="control-label"></label>
                    <textarea asp-for="Tip" class="form-control" rows="8"></textarea>
                    <span asp-validation-for="Tip" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
        <div class="col-md-4"><p></p></div>
    </div>
    </div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
