<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">Date</th>
            <th scope="col">Weight</th>
            <th scope="col">Neck</th>
            <th scope="col">Chest</th>
            <th scope="col">Waist</th>
            <th scope="col">Hips</th>
            <th scope="col">Thigh</th>
            <th scope="col">Calves</th>
            <th scope="col">Arms</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Measurements)
        {
            <tr>
                <td>@item.uploadDate</td>
                <td>@item.CurrentWeight lbs</td>
                <td>@item.Neck in</td>
                <td>@item.Chest in</td>
                <td>@item.Waist in</td>
                <td>@item.Hips in</td>
                <td>@item.Thigh in</td>
                <td>@item.Calves in</td>
                <td>@item.Arms in</td>

            </tr>
        }

        </tbody>
</table>






