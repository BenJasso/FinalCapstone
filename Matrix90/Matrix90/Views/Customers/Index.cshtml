@model Matrix90.Models.Customer

@{
    List<Notification> Notifications = ViewBag.Notifications;
    int notificationsCount = Notifications.Count;
    List<CustomerMeasurements> Measurements = ViewBag.Measurements;
    Measurements.OrderByDescending(x => x.uploadDate);
    var NutritionPlan = ViewBag.NutritionPlan;
    var progressPercentage = (double)ViewBag.progress;
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}
<div><br /></div>
<div class="container" style="text-align:center; "><img src="~/Images/logo.png" /></div>
<div> <br /></div>

<div class="jumbotron" style="background-color: #272727">
    <div><h1 style="text-align:center">@Model.FirstName @Model.LastName </h1>@if (notificationsCount != 0)
    {<a  href="#" class="btn btn-warning" onclick="location.href='@Url.Action("ViewNotifications", "Customers", new { customerId = Model.CustomerId })'">@notificationsCount Notifications</a>}</div>

    <h4 style="text-align:center">Starting Weight: @Measurements.First().StartingWeight  |  Current Weight: @Measurements.First().CurrentWeight   |   Goal Weight: @Measurements.First().GoalWeight</h4>

    <div class="progress">
        <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100" style="width: @progressPercentage%"></div>
    </div>
    <div><br /></div>
